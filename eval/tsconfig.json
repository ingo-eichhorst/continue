{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "lib": ["ES2022"],
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "isolatedModules": false,
    "verbatimModuleSyntax": false,
    "paths": {
      "@aws-sdk/*": ["../node_modules/@aws-sdk/*"],
      "@continuedev/*": ["../node_modules/@continuedev/*"],
      "@modelcontextprotocol/*": ["../node_modules/@modelcontextprotocol/*"],
      "openai": ["../node_modules/openai"],
      "ollama": ["../node_modules/ollama"],
      "replicate": ["../node_modules/replicate"]
    }
  },
  "include": [
    "cli/**/*.ts",
    "core/**/*.ts",
    "datasets/**/*.ts",
    "execution/**/*.ts",
    "plugins/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "../core/**/*"
  ],
  "ts-node": {
    "esm": true
  }
}